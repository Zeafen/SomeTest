<Application x:Class="Project_Ver3._0_.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Project_Ver3._0_"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="TaskSelection">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Task Number" Grid.Row="0" Grid.Column="0" Margin="3,3,3,3"/>
                <Label Content="{Binding TaskNumber}" Grid.Row="1" Grid.Column="0" Margin="3,3,3,3"/>
                <Label Content="Your Answer" Grid.Row="0" Grid.Column="1" Margin="3,3,3,3"/>
                <Label Content="{Binding Text}" Grid.Row="1" Grid.Column="1" Margin="3,3,3,3"/>
            </Grid>
        </DataTemplate>
    </Application.Resources>
</Application>
