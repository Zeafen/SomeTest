<Window x:Class="Project_Ver3._0_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Ver3._0_"
        mc:Ignorable="d"
        Title="Introduction" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <StackPanel Grid.IsSharedSizeScope="True">
        <TextBlock x:Name="Introduction" Height="Auto" TextWrapping="Wrap" FontFamily="Times New Roman" FontSize="16" Margin="6,6,6,6"/>
        <Grid Width="150" Margin="0,6,580,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <RadioButton Content="1" Grid.Column="0" Checked="RadioButton1_Checked"/>
            <RadioButton Content="2"  Grid.Column="1" Checked="RadioButton2_Checked"/>
            <RadioButton Content="3" Grid.Column="2" Checked="RadioButton3_Checked"/>
        </Grid>
        <Button Content="Let's start" Width="210" Margin="50" IsEnabled="False" x:Name="MoveButtton" Click="MoveButtton_Click"/>
    </StackPanel>
</Window>
